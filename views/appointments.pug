extends layout

block content
  // Alert Section
  if alerts
    each alert in alerts
      .alert(class=alert.type, style='padding: 10px; margin-bottom: 10px;')
        p= alert.message

  form(action='/appointments' method='POST' class='mt-4' style='background-color: orange; padding: 20px; border-radius: 10px;')
    h1.text-center.margin-center(style='color: white;') Book Your Car Wash Appointment
    .form-group
      label(for='name') Name
      input.form-control(type='text' id='name' name='name' placeholder='Enter your name.' value=username required)
    .form-group
      label(for='email') Email
      input.form-control(type='email' id='email' name='email' placeholder='Enter your email.' value=email readonly required)
    .form-group
      label(for='date') Appointment Date
      input.form-control(type='date' id='date' name='date' required)
    .form-group
      label(for='package') Service Package
      select.form-control(id='package' name='package' required)
        option(value='' selected disabled) Select service package.
        option(value='Basic', selected=selectedPackage === 'Basic') Basic Package - $19.99
        option(value='Business', selected=selectedPackage === 'Business') Business Package - $29.99
        option(value='Premium', selected=selectedPackage === 'Premium') Premium Package - $39.99
        option(value='Deluxe', selected=selectedPackage === 'Deluxe') Deluxe Package - $99.99
        option(value='VIP', selected=selectedPackage === 'VIP') VIP Package - $199.99
        option(value='Royal', selected=selectedPackage === 'Royal') Royal Package - $299.99
    .form-group
      label(for='message') Additional Information
      textarea.form-control(id='message' name='message' rows='4' placeholder='Any special requests or information')
    button.btn.btn-primary(type='submit', style='background-color: black; border: none;') Book Appointment
