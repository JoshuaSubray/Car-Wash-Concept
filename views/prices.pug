extends layout

block content
  div(style='background-color: #ff9900; padding: 20px;')
    if success_msg
      .alert.alert-success= success_msg

    // Page Title
    h1(style='font-size: 48px; text-align: center; color: white;') Our Pricing Plans

    // Introduction
    p(style='font-size: 24px; text-align: center; color: white;') Choose the plan that suits you best and book an appointment today!

    // Pricing Options
    .container.mt-5
      .row
        // Basic Plan
        .col-md-4
          .pricing-plan(style='background: white; padding: 20px; border-radius: 10px; text-align: center;')
            h3 Basic Plan
            p(style='font-size: 20px;') Only $19.99 per wash
            p(style='font-size: 16px;') Fast and affordable, perfect for regular cleaning
            a.btn.btn-primary(href='/appointments?package=Basic', style='background: #ff9900; color: white;') Make an Appointment with this Plan

        // Premium Plan
        .col-md-4
          .pricing-plan(style='background: white; padding: 20px; border-radius: 10px; text-align: center;')
            h3 Business Plan
            p(style='font-size: 20px;') Only $29.99 per wash
            p(style='font-size: 16px;') Includes deep cleaning, ideal for premium care
            a.btn.btn-primary(href='/appointments?package=Premium', style='background: #ff9900; color: white;') Make an Appointment with this Plan

        // Deluxe Plan
        .col-md-4
          .pricing-plan(style='background: white; padding: 20px; border-radius: 10px; text-align: center;')
            h3 Premium Plan
            p(style='font-size: 20px;') Only $39.99 per wash
            p(style='font-size: 16px;') Comprehensive care with additional services
            a.btn.btn-primary(href='/appointments?package=Deluxe', style='background: #ff9900; color: white;') Make an Appointment with this Plan

      .row.mt-5
        // Family Plan
        .col-md-4
          .pricing-plan(style='background: white; padding: 20px; border-radius: 10px; text-align: center;')
            h3 Deluxe Plan
            p(style='font-size: 20px;') $99.99 per month
            p(style='font-size: 16px;') Unlimited washes for the whole family
            a.btn.btn-primary(href='/appointments?package=Family', style='background: #ff9900; color: white;') Make an Appointment with this Plan

        // Business Plan
        .col-md-4
          .pricing-plan(style='background: white; padding: 20px; border-radius: 10px; text-align: center;')
            h3 VIP Plan
            p(style='font-size: 20px;') $199.99 per month
            p(style='font-size: 16px;') Unlimited washes for business fleets
            a.btn.btn-primary(href='/appointments?package=Business', style='background: #ff9900; color: white;') Make an Appointment with this Plan

        // VIP Plan
        .col-md-4
          .pricing-plan(style='background: white; padding: 20px; border-radius: 10px; text-align: center;')
            h3 Royale Plan
            p(style='font-size: 20px;') $299.99 per month
            p(style='font-size: 16px;') Premium services with priority scheduling
            a.btn.btn-primary(href='/appointments?package=VIP', style='background: #ff9900; color: white;') Make an Appointment with this Plan
